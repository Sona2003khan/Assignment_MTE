public class mid_term_22 {
    public static boolean isPowerOfTwo(int n) {
        if(n<=0){
            return false;
        }
        if((n & (n-1)) == 0){
            return true;
        }
        return false;
    }

    public static void main(String[] args) {
        int n=16;
        boolean result=isPowerOfTwo(n);
        System.out.println(result);
    }
}
